<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="795dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/dis_pic_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/body_pic_frame">

                <ImageView
                    android:id="@+id/body_picture"
                    android:layout_width="match_parent"
                    android:layout_height="412dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/h09_001"
                    android:scaleType="centerInside"/>

            </FrameLayout>

            <TextView
                android:id="@+id/name_text"
                android:layout_width="335dp"
                android:layout_height="100dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/name_background"
                android:gravity="center"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/name_dis_size" />

            <TextView
                android:id="@+id/sex_text"
                android:layout_width="335dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/id_background"
                android:gravity="center"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/id_dis_size" />

            <TextView
                android:id="@+id/age_text"
                android:layout_width="335dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/id_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/id_dis_size" />

            <TextView
                android:id="@+id/id_text"
                android:layout_width="335dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/id_background"
                android:gravity="center"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/id_dis_size" />
        </LinearLayout>

        <com.hedymed.fragment.fragmentViewPager
            android:id="@+id/fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="43dp">
        </com.hedymed.fragment.fragmentViewPager>
    </LinearLayout>

    <ImageView
        android:id="@+id/page_switch_pic"
        android:layout_width="48dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/linearLayout1"
        android:layout_marginRight="58dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/page_1" />

    <TextView
        android:id="@+id/err_dis_text"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@id/page_switch_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/status_label_back"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:textColor="@color/text_white_color"
        android:textSize="@dimen/error_dis_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/err_dis_text"
        android:layout_marginTop="6dp"
        android:background="@drawable/status_bar_back" >

        <ImageView
            android:id="@+id/expouse_status_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:paddingLeft="34dp"
            android:src="@drawable/expose_enable_pic" />

        <ImageView
            android:id="@+id/alignment_status_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="135dp"
            android:src="@drawable/alignment_no_pic" />

        <ImageView
            android:id="@+id/fpd_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="254dp"
            android:src="@drawable/fpd_ws_land" />

        <TextView
            android:id="@+id/rha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="480dp"
            android:text="0°"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color" />

        <TextView
            android:id="@+id/rva_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="609dp"
            android:text="0°"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color" />

        <TextView
            android:id="@+id/sid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="721dp"
            android:text="0cm"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color" />

        <LinearLayout
	        android:id="@+id/grid_text_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:layout_alignParentLeft="true"
            android:layout_marginLeft="877dp"
	        android:layout_centerVertical="true">
           
        <TextView
            android:id="@+id/grid_sid"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color" 
            android:includeFontPadding="false"/>
        
        <TextView
            android:id="@+id/grid_rate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="10:1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color"
            android:includeFontPadding="false"/>
        
        <TextView
            android:id="@+id/gridMaterial"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/grid_mateial_al"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color" 
            android:includeFontPadding="false"/>
       </LinearLayout>
        
        <ImageView
            android:id="@+id/thermal_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="952dp"
            android:src="@drawable/thermal_pic_25" />

        <TextView
            android:id="@+id/thermal_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/thermal_picture"
            android:layout_marginLeft="8dp"
            android:text="0%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color" />

        <Button
            android:id="@+id/help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/help_button_state_list_land" />
    </RelativeLayout>

</RelativeLayout>