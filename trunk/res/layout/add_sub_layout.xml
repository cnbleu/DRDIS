<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/add_sub_view_background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_widget_add_state_list" />

    <TextView
        android:id="@+id/value_dis"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_white_color"
        android:textSize="@dimen/name_dis_size" />

    <TextView
        android:id="@+id/value_unit"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_white_color"
        android:textSize="@dimen/id_dis_size" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_widget_sub_state_list" />

</LinearLayout>